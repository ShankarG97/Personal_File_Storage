<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/cart_prd_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bad_img_4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/cart_prd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubik_medium"
        android:text="Yonex GR 303 Badminton Racket"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart_prd_image"
        app:layout_constraintTop_toTopOf="@+id/cart_prd_image" />

    <TextView
        android:id="@+id/cart_prd_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹599"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0"
        android:fontFamily="@font/rubik_bold_italic"
        android:textColor="@color/purple"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_prd_image"
        app:layout_constraintEnd_toEndOf="@+id/cart_prd_name"
        app:layout_constraintStart_toEndOf="@+id/cart_prd_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_prd_name" />



</androidx.constraintlayout.widget.ConstraintLayout>